{
  "version": 2,
  "name": "entropiaedu-site",
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "**/*.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/pagamento/(.*)",
      "dest": "/pagamento/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "MERCADOPAGO_WEBHOOK_SECRET": "@mercadopago_webhook_secret"
  },
  "functions": {
    "api/create-preference.js": {
      "maxDuration": 10
    },
    "api/webhook.js": {
      "maxDuration": 10
    }
  }
}